<div class="well">
<h3>New Client Unit</h3>
<%=nested_form_for @unit,remote: true,authenticity_token: true do |form|%>

<div class="form-group">
  <%= form.label :client %>
  <%= form.select :user_id, options_for_select([["Select Client",""]]+User.where.not(name: "admin").order("name").pluck(:name,:id))%>
</div>

<div class="form-group">
  <%= form.label :project %>
  <%= form.select :project_id, options_for_select([["Select Project",""]]+Project.all.order("name").pluck(:name,:id))%>
</div>

<div class="form-group">
  <%= form.label :unit_no %>
  <%= form.text_field :unit_no,class: "form-control", required: true%>
</div>

<div class="form-group">
  <%= form.label :net_value %>
  <%= form.number_field :net_value,class: "form-control", required: true%>
</div>





<%= form.submit :submit,class: "btn btn-default" %>
<%end%>
</div>

<%=javascript_tag do%>
document.addEventListener("turbolinks:load",function(){

	

	$("#unit_project_id").on("click",function(e){
		e.preventDefault()
		var id = this.value
		url = "/units/dynamic_options/"+id
		if (id != ""){
			$.ajax({
				url: url,
				type: "get",
				data: $(this).serialize(),
				dataType: "html",
				success: function(data){
					$("#unit_project_id").parent().after(data)
				}
			})
		}
	})

	
})
<%end%>