<div class="col-lg-12">
<h1 class="page-header">Units</h1>
<div>

<table class="table">
<thead>
<tr>
<th>ID</th>
<th>Project</th>
<th>Unit No</th>
<th>Client</th>
<th>Net Value</th>
<th>Size</th>
<th>Package</th>
</tr>
</thead>

<tbody>
<%@units.order("projects.name").each do |u|%>
<tr>
<td><%=u.id%></td>
<td><%=u.project.name%></td>
<td><%=u.unit_no%></td>
<td><%=u.user.name%></td>
<td><%=u.net_value%></td>
<td><%=u.layout.size if u.layout.present?%></td>
<td><%=u.model.package if u.model.present?%></td>
<td>
	<%=link_to edit_unit_path(u), "data-toggle"=> "tooltip", title: "Edit" do%>
		<i class="glyphicon glyphicon-pencil" ></i>
	<%end%>
</td>
<td>
	<%=link_to "#", "data-toggle"=> "tooltip", title: "Delete", remote: true do%>
		<i class="glyphicon glyphicon-remove" data-toggle="modal" data-target="#deleteModal" id="/units/<%=u.id%>"></i>
	<%end%>
</td>
</tr>
<%end%>
</tbody>
</table>

<%=render "pages/deleteModal"%>