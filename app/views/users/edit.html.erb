<div class="well">
<h3>Edit Profile</h3>
<%=form_for current_user do |form|%>

	<div class="form-group">
	  <%= form.label :title %>
	  <%= form.select :title,options_for_select([["Select a title",""]]+User.titles.keys),class: "form-control" %>
	</div>

	<div class="form-group">
	  <%= form.label :name %>
	  <%= form.text_field :name,class: "form-control",required: true %>
	</div>

	<div class="form-group">
	  <%= form.label :mobile_number %>
	  <%= form.text_field :mobile_no,class: "form-control",required: true %>
	</div>

	<div class="form-group">
	  <%= form.label :email %>
	  <%= form.email_field :email,class: "form-control",required: true %>
	</div>

	<div class="form-group">
	  <%= form.label :date_of_birth %>
	  <%= form.text_field :birthday,class: "form-control",required: true,id: "datepicker",placeholder: "yyyy-mm-dd" %>
	</div>

	<div class="form-group">
	  <%= form.label :address %>
	  <%= form.text_area :address,class: "form-control" %>
	</div>

	<%=form.submit "Update",class: "btn btn-default" %>

<%end%>
</div>