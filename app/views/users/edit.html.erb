<div class="col-lg-12">
<h1 class="page-header">Edit Profile</h1>
<div>

<div class="row">
<div class="well col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
<%=form_for @user do |form|%>

	<div class="form-group">
	  <%= form.label :title %>
	  <%= form.select :title,options_for_select(User.titles.keys,:selected => @user.title),{:prompt => "Select Title"},{class: "form-control",required: true}%>
	</div>

	<div class="form-group">
	  <%= form.label :name %>
	  <%= form.text_field :name,class: "form-control",required: true %>
	</div>

	<div class="form-group">
	  <%= form.label :mobile_number %>
	  <%= form.text_field :mobile_no,class: "form-control",required: true %>
	</div>
	
	<div class="form-group">
	  <%= form.label :email %>
	  <%= form.text_field :email,class: "form-control",required: true %>
	</div>

	<div class="form-group">
	  <%= form.label :date_of_birth %>
	  <%= form.text_field :birthday,class: "form-control",required: true,id: "datepicker",placeholder: "yyyy-mm-dd" %>
	</div>

	<div class="form-group">
	  <%= form.label :address %>
	  <%= form.text_area :address,class: "form-control" %>
	</div>

	<%=form.submit "Update",class: "btn btn-default" %>

<%end%>
</div>
</div>
</div>