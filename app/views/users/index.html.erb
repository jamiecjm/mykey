<div class="col-lg-12">
<h1 class="page-header">Clients</h1>
<div>
<table class= "table">
<thead>
<tr>
<th>ID</th>
<th>Title</th>
<th>Name</th>
<th>Mobile No</th>
<th>Email</th>
<th>Address</th>
<th>Birthday</th>
<th></th>
<th></th>
</tr>
</thead>

<tbody>
<%@users.each_with_index do |u,index|%>
<tr>
<td><%=u.id%></td>
<td><%=u.title%></td>
<td><%=u.name%></td>
<td><%=u.mobile_no%></td>
<td><%=u.email%></td>
<td><%=u.address%></td>
<td><%=u.birthday%></td>
<td>
	<%=link_to edit_user_path(u), "data-toggle"=> "tooltip", title: "Edit" do%>
		<i class="glyphicon glyphicon-pencil" ></i>
	<%end%>
</td>
<td>
	<%=link_to "#", "data-toggle"=> "tooltip", title: "Delete", remote: true do%>
		<i class="glyphicon glyphicon-remove" data-toggle="modal" data-target="#deleteModal" id="/users/<%=u.id%>"></i>
	<%end%>
</td>
</tr>
<%end%>
</tbody>
</table>

<%=render "pages/deleteModal"%>