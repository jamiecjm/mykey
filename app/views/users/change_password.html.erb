<div class="well">
<%=form_tag ("/passwords/update") do%>

<div class="form-group">
	<%=label_tag "Original password"%>
	<%=password_field_tag :original_password,nil,class: "form-control",required: true %>
</div>

<div class="form-group">
	<%=label_tag "New password"%>
	<%=password_field_tag :password,nil,class: "form-control",required: true %>
</div>

<div class="form-group">
	<%=label_tag "Password confirmation"%>
	<%=password_field_tag :password_confirmation,nil,class: "form-control",required: true %>
</div>

<%=hidden_field_tag :user_id, @user.id%>

<%=submit_tag "Update",class: "btn btn-default" %>
<%end%>
</div>