<div class="col-lg-12">
<h1 class="page-header">Update Profile</h1>
<div>

<div class="well col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
<%=form_tag ("/first_update") do%>

<div class="form-group">
  <%= label_tag :title %>
  <%= select_tag :title,options_for_select(User.titles.keys,:selected => current_user.title),:prompt => "Select a Title",class: "form-control",required: true%>
</div>

<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name,current_user.name,class: "form-control",required: true %>
</div>

<div class="form-group">
  <%= label_tag :mobile_number %>
  <%= text_field_tag :mobile_no,current_user.mobile_no,class: "form-control",required: true %>
</div>

<div class="form-group">
  <%= label_tag :email %>
  <%= email_field_tag :email,current_user.email,class: "form-control",required: true %>
</div>

<div class="form-group">
  <%= label_tag :date_of_birth %>
  <%= text_field_tag :birthday,current_user.birthday,class: "form-control",required: true,id: "datepicker",placeholder: "yyyy-mm-dd" %>
</div>

<div class="form-group">
  <%= label_tag :address %>
  <%= text_area_tag :address,current_user.address,class: "form-control" %>
</div>

<div class="form-group">
	<%=label_tag "Original password"%>
	<%=password_field_tag :original_password,nil,class: "form-control",required: true %>
</div>

<div class="form-group">
	<%=label_tag "New password"%>
	<%=password_field_tag :password,nil,class: "form-control",required: true %>
</div>

<div class="form-group">
	<%=label_tag "Password confirmation"%>
	<%=password_field_tag :password_confirmation,nil,class: "form-control",required: true %>
</div>

<%=submit_tag "Update",class: "btn btn-default" %>

<%end%>
</div>